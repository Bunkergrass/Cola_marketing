<?xml version="1.0" encoding="utf-8"?>
<com.htmessage.cola_marketing.widget.RCLayout.RCRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:round_corner="5dp"
    app:clip_background="true">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_baokuan"
        android:layout_width="match_parent"
        android:layout_height="187dp"/>

    <LinearLayout
        android:id="@+id/ll_baokuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_below="@+id/vp_baokuan">
        <TextView
            android:id="@+id/tv_baokuan_trade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:textSize="16sp"
            android:textColor="@color/text_color_dark"/>
        <TextView
            android:id="@+id/tv_baokuan_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_color_light"/>
    </LinearLayout>

</com.htmessage.cola_marketing.widget.RCLayout.RCRelativeLayout>