<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="220dp"
    android:padding="12dp"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_dialog_cancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="right"
        android:padding="6dp"
        android:src="@drawable/icon_cancel"/>
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/LightBlue"
        android:layout_gravity="center"
        android:text="标题"/>
    <EditText
        android:id="@+id/et_dialog_input"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/stroke_all"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:padding="5dp"
        android:gravity="top|start"
        android:textSize="14sp"
        android:textColor="@color/text_color_mid"
        android:maxLines="4"
        android:inputType="textMultiLine" />
    <Button
        android:id="@+id/btn_dialog_send"
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:background="@drawable/btn_radious_blue"
        android:layout_gravity="center"
        android:text="@string/str_send"
        android:textColor="@color/white"
        android:textSize="14sp" />


</LinearLayout>