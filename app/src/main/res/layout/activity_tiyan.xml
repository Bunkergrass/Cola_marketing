<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.homepageFunc.tiyan.TiyanActivity">

    <include layout="@layout/layout_title_bar"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/img_tiyan_banner" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_tiyan"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/white"
        app:tabBackground="@color/transparent"
        app:tabTextColor="@color/text_color_light"
        app:tabSelectedTextColor="@color/LightBlue"
        app:tabIndicatorColor="@color/LightBlue">

    </android.support.design.widget.TabLayout>

    <com.htmessage.cola_marketing.widget.swipyrefresh.SwipyRefreshLayout
        android:id="@+id/srl_tiyan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_tiyan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.htmessage.cola_marketing.widget.swipyrefresh.SwipyRefreshLayout>



</LinearLayout>