<?xml version="1.0" encoding="utf-8"?>
<com.htmessage.cola_marketing.widget.RCLayout.RCRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    app:round_corner="5dp"
    app:clip_background="true">

    <ImageView
        android:id="@+id/iv_task"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:src="@drawable/default_image"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_task"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:textSize="16sp"
        android:textColor="@color/text_color_dark"
        android:text="@string/test_text"/>

    <TextView
        android:id="@+id/tv_task_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_task"
        android:layout_below="@id/tv_task"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="@color/text_color_light"
        android:maxLines="2"
        android:maxEms="16"
        android:ellipsize="end"
        android:text="@string/test_text_long"/>
    
    <Button
        android:id="@+id/btn_task"
        android:layout_width="64dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_radious_blue"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:text="@string/test_text"/>

</com.htmessage.cola_marketing.widget.RCLayout.RCRelativeLayout>